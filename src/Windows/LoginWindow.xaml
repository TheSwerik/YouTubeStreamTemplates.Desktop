<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="YouTubeStreamTemplatesCrossPlatform.Windows.LoginWindow"
        Title="YouTubeStreamTemplatesCrossPlatform"
        Width="400" Height="200" CanResize="False">
    <Grid RowDefinitions="*,2*,*" ColumnDefinitions="*,5*,*">
        <Image Grid.Row="1" Grid.Column="1"
               Source="{DynamicResource SigninImage}" Stretch="None"
               PointerReleased="Login_OnClick" PointerPressed="Login_OnPress" />
    </Grid>
</Window>