<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YouTubeStreamTemplatesCrossPlatform.Controls.TagEditor">
    <Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="TagsPanel" Background="Transparent">
                <TextBox x:Name="InputTextBox"
                         KeyUp="InputTextBox_OnKeyUp" LostFocus="InputTextBox_OnLostFocus"
                         MinWidth="100" BorderThickness="0" Margin="0,5,0,0" />
            </WrapPanel>
        </ScrollViewer>
    </Border>
</UserControl>