<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.nlog-project.org/schemas/NLog.xsd">

    <targets>
        <target name="coloredDebugger" xsi:type="Debugger"
                layout="${longdate} ${pad:padding=-8:inner=[${level:uppercase=true}]} ${pad:padding=-25:inner=${logger:shortName=true}\:} ${message}"/>
        <target name="coloredConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false"
                layout="${longdate} ${pad:padding=-8:inner=[${level:uppercase=true}]} ${pad:padding=-25:inner=${logger:shortName=true}\:} ${message}">
            <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray"/>
            <highlight-row condition="level == LogLevel.Info" foregroundColor="White"/>
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
            <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White"/>
        </target>
        <target name="logFile" xsi:type="File"
                fileName="${specialfolder:folder=ApplicationData}\YouTubeStreamTemplates\logs.log"
                layout="${longdate} ${pad:padding=-8:inner=[${level:uppercase=true}]} ${pad:padding=-25:inner=${logger:shortName=true}\:} ${message}"/>
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="coloredDebugger"/>
        <logger name="*" minlevel="Info" writeTo="coloredConsole"/>
        <logger name="*" minlevel="Debug" writeTo="logFile"/>
    </rules>
</nlog>