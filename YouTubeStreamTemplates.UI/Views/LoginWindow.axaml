<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:YouTubeStreamTemplates.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="YouTubeStreamTemplates.UI.Views.LoginWindow"
        Title="YouTubeStreamTemplates"
        Width="400" Height="200" CanResize="False"
        ShowActivated="True"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen">
    <Design.DataContext>
        <viewModels:LoginViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="*,2*,*" ColumnDefinitions="*,5*,*">
        <Button Padding="0" Grid.Row="1" Grid.Column="1" Command="{Binding LoginCommand}">
            <Image Margin="0" Source="/Assets/google_signin_dark.png" />
        </Button>
    </Grid>
</Window>