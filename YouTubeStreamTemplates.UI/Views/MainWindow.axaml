<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:YouTubeStreamTemplates.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabs="clr-namespace:YouTubeStreamTemplates.UI.Views.Tabs"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="YouTubeStreamTemplates.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="YouTubeStreamTemplates.UI">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <TabControl DockPanel.Dock="Top">
        <TabItem Header="Home" VerticalContentAlignment="Center">
            <tabs:HomeView />
        </TabItem>
        <TabItem Header="Templates" VerticalContentAlignment="Center">
            Templates
        </TabItem>
        <TabItem Header="Streams" VerticalContentAlignment="Center">
            Streams
        </TabItem>
    </TabControl>


</Window>